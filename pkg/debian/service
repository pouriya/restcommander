[Unit]
Description=MCP daemon - expose scripts as MCP tools and resources
Documentation=https://github.com/pouriya/mcpd

[Service]
Type=simple
# Depending on your installation, You may want to change paths here:
ExecStart=/usr/local/bin/mcpd config /etc/mcpd/config.toml
StandardOutput=syslog
Restart=on-failure
#User=
#Group=

[Install]
WantedBy=multi-user.target
